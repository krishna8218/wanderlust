<%layout("/layouts/boilerplate")%>
<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filters{
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;

  }
  .filters:hover{
    opacity: 1;
    cursor: pointer;
  }
  .filters p{
    font-size: 0.8rem;
  }
  .tax-info{
    display: none;
  }
  .tax-toggle{
    border:1px solid black;
    border-radius: 1rem;
    height: 2rem;
    padding: 1rem;
    margin-left: 5rem;
    display: flex;
    align-items: center;
    font-weight: 400;
    opacity: 0.7;
    
  }
  .tax-toggle:hover{
    opacity: 1;
  }
  .tax-toggle input:hover{
    cursor: pointer;
  }
</style>
<div id="filters"  data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
